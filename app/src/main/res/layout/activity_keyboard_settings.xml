<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KeyboardSettings">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/selectKeyboard"
        android:text="Add Keyboard"
        android:layout_marginTop="50dp"
        android:id="@+id/addKeyboard"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/addKeyboard"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Select Keyboard"
        android:layout_marginTop="50dp"
        android:id="@+id/selectKeyboard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>